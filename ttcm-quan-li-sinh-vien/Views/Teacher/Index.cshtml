@model ttcm_quan_li_sinh_vien.EF.TEACHER

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Thông tin cá nhân</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            @using (Html.BeginForm("UpdateTeacher", "Teacher", FormMethod.Post))
            {
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                @if (Model.Image == null)
                                {
                                    <img src="~/assets/img/avatar.jpg" width="150" style="border-radius: 5px">
                                }
                                else
                                {
                                    <img src="~/assets/img/teacher/@Model.Image" width="150" style="border-radius: 5px">
                                }
                                <br />

                                <div class="form-group" style="display:flex;">
                                    <label for="exampleInputEmail1" style="margin-top:8px;">ID: </label>
                                    @Html.TextBoxFor(m => m.TeacherID, new { @class = "form-control", @placeholder = "Mã giảng viên", @readonly = "readonly", @style="border:none; background-color:white;" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Họ tên</label>
                                        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", @placeholder = "Họ tên" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Khoa giảng dạy</label>
                                        @Html.DropDownListFor(m => m.FacultyID, ViewBag.Faculty as SelectList, "-- Chọn khoa --", new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Giới tính</label>
                                        @Html.TextBoxFor(m => m.Gender, new { @class = "form-control", @placeholder = "Giới tính" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Ngày sinh</label>
                                        @Html.TextBoxFor(m => m.Birthday, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Điện thoại</label>
                                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @placeholder = "Điện thoại" })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Email</label>
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Địa chỉ</label>
                                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = "Địa chỉ" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            }
        </div>
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
         </div>
<!-- /.content-wrapper -->
