@model ttcm_quan_li_sinh_vien.EF.STUDENT
@{
    ViewBag.Title = "DeleteStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12 animated bounceInRight">
                <h1 class="m-0"><span class="fa fa-trash"></span> Bạn có chắc muốn xóa sinh viên này không</h1>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Thông tin sinh viên</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            @*, new { enctype = "multipart/form-data" }*@
            @using (Html.BeginForm("DeleteStudent", "Admin", FormMethod.Post))
            {
                <span class="text-danger">@ViewBag.ErrorStudent</span>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Mã sinh viên</label>
                                @Html.TextBoxFor(m => m.StudentID, new { @class = "form-control", @placeholder = "Mã sinh viên", @readonly = "readonly" })
                                @Html.ValidationMessageFor(m => m.StudentID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Khoa</label>
                                @Html.DropDownListFor(m => m.ClassID, ViewBag.Classes as SelectList, "-- Chọn khoa --", new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Họ tên</label>
                                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", @placeholder = "Họ tên", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Ngày sinh</label>
                                @Html.TextBoxFor(m => m.Birthday, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Giới tính</label>
                                @Html.TextBoxFor(m => m.Gender, new { @class = "form-control", @placeholder = "Giới tính", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Địa chỉ</label>
                                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = "Địa chỉ", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email</label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Ngày nhập học</label>
                                @Html.TextBoxFor(m => m.YearAdmission, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Điện thoại</label>
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @placeholder = "Điện thoại", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Ảnh đại diện</label>
                                @*<input type="file" id="fileName" name="fileName" accept="image/*" />*@
                                @Html.TextBoxFor(m => m.Image, new { @class = "form-control", type = "file" })
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Xác nhận xóa</button>
                </div>
            }
        </div>
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
