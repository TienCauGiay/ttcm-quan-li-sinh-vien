@using PagedList.Mvc;
@using PagedList;
@model IPagedList<ttcm_quan_li_sinh_vien.EF.SCORE>

@{
    ViewBag.Title = "Score";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-4 animated bounceInRight">
                <h1 class="m-0"><span class="fa fa-paint-brush"></span> Bảng điểm sinh viên</h1>
            </div>
            <div class="col-sm-2 animated bounceInRight">
                <h1 class="m-0">Điểm tổng: @Math.Round(ViewBag.DiemHeMuoi, 2)</h1>
            </div>
            <div class="col-sm-6">
                @using (Html.BeginForm("ScoreBySemester", "Student"))
                {
                    <div class="col-sm-10">
                        <select class="form-control" name="semester">
                            <option value="">--Chọn học kỳ--</option>
                            @foreach (var item in ViewBag.Semester)
                            {
                                <option value="@item.SemesterID">@item.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-sm-2">
                        <button class="form-control" type="submit"><i style="display:inline-block ;margin-left:-5px;" class="fa fa-search"></i></button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card-body animated pulse">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Môn học</th>
                        <th>Điểm chuyên cần</th>
                        <th>Điểm kiểm tra</th>
                        <th>Điểm thi</th>
                        <th>Điểm trung bình(Hệ 10)</th>
                        <th>Điểm trung bình(Hệ 4)</th>
                        <th>Đánh giá</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SUBJECT.Name</td>
                                <td>@item.ScoreCC</td>
                                <td>@item.ScoreKT</td>
                                <td>@item.DiemThi</td>
                                <td>@(Math.Round(item.DiemTB.HasValue ? item.DiemTB.Value : 0, 2))</td>
                                <td>@(Math.Round(item.DiemTB.HasValue ? item.DiemTB.Value*4/10 : 0, 2))</td>
                                @if (item.DiemTB >= 4.0)
                                {
                                    <td>Đạt</td>
                                }
                                else
                                {
                                    <td>Không đạt</td>
                                }
                            </tr>

                        }
                    }
                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Score", new { page }), new PagedListRenderOptions
                       {
                           UlElementClasses = new[] { "pagination" }
                       })
        </div>
    </div>
</section>

